#include <stdio.h>
int main() {
    char text[21]; 
    int i = 0;
    printf("Enter text to encrypt (max 20 characters): ");
    scanf("%20s", text);
    while (text[i] != '\0') {
        if ((text[i] >= 'A' && text[i] <= 'Z')) {
            text[i] = 'Z' - (text[i] - 'A');
        } else if ((text[i] >= 'a' && text[i] <= 'z')) {
            text[i] = 'z' - (text[i] - 'a');
        }
        i++;
    }
    printf("Encrypted ciphertext: %s\n", text);
}
